@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}


<div id="apiForm" class="p-5">
    <h1 class="text-center display-4 mb-4">SteamLookup - Tool</h1>
    <form method="post">
            <div class="mb-3">
                <label class="form-label">API Token</label>
                <input type="text" asp-for="@Model.Key" class="form-control" placeholder="API Token" required>
            </div>
            <div class="mb-3">
                <label class="form-label">Steam 64 ID</label>
                <input type="text" asp-for="@Model.User.Personaname" class="form-control" placeholder="Steam64" required>
            </div>
            <button type="submit" class="btn btn-success">Submit</button>
    </form>
</div>

